<!DOCTYPE html>
<html>

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
  <title>归档|{{@root/site/title}}</title>
</head>

<body>
  <div class="archive-wraper">
    <%= require("../share/header/index.ejs")() %>
    <div class="content-wrapper">
      <div>
        {{#each @root/archives}}
        <h2>{{name}}</h2>
        <ul class="posts">
          {{#each list}}
          <li class="post">
            <div class="meta">
              <time>{{dateformat create_time}}</time>
            </div>
            <span>
              <a href="/post/{{id}}.html">{{title}}</a>
            </span>
          </li>
          {{/each}}
        </ul>
        {{/each}}
      </div>
    </div>
    <%= require("../share/footer/index.ejs")() %>

</body>

</html>